FIRE_IP='192.168.1.32'
alias adbConnect='adb connect $FIRE_IP'
alias adbStopDestro='adbConnect; adb shell am force-stop com.snei.vue.android.firetv'
alias adbStartDestroDirect='adbConnect; adb shell am start -a android.intent.action.MAIN -n com.snei.vue.android.firetv/.ui.PSVue'
alias adbStartDestro='firestickStartWithUrl /#/profiles'

firestickStart() {
    adbConnect;

    adbStopDestro;
    /usr/bin/open -a "/Applications/Google Chrome.app/" 'http://$FIRE_IP:9222/';

    adbStartDestro;
}
firestickStartWithUrl() {
    adbConnect;

    adbStopDestro;
    /usr/bin/open -a "/Applications/Google Chrome.app/" 'http://$FIRE_IP:9222/';

    IPWIFI=`ipWIFI`;
    adb shell am start --user 0  -e url http://$IPWIFI:4200/$1?useFixtures=false -n com.snei.vue.android.firetv/.ui.dev.UrlLaunchActivity;
}

alias ipWIFI='ipconfig getifaddr en0'
alias ipWired='ipconfig getifaddr en3'

sayIP() {
    IPWIFI=`ipWIFI`;
    echo $IPWIFI;
}



